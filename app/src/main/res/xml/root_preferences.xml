<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/multiplayer_options" >

        <CheckBoxPreference app:title="@string/privacy"
            app:key="privacy"
            app:summaryOn="@string/privacy_activated"
            app:summaryOff="@string/privacy_deactivated" />

        <CheckBoxPreference app:title="@string/use_google_name"
            app:key="google_name" />

        <Preference app:title="@string/delete_user"
            app:key="delete"
            app:summary="@string/delete_user_warning" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/general" >

        <ListPreference app:title="@string/dark_mode"
            app:key="dark_mode"
            app:defaultValue="@string/system_default"
            app:entries="@array/DarkModeOptionsView"
            app:entryValues="@array/DarkModeOptions" />

    </PreferenceCategory>

</PreferenceScreen>
